<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e3b66"
        android:padding="16dp">



        <RelativeLayout
            android:id="@+id/caradview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_back"
            android:padding="16dp">

                    <ImageView
                        android:id="@+id/nameLogoIconId"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:background="@drawable/logo"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        />
<TextView
    android:id="@+id/topic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="දොළුව රෝයල් යෞවන සමාජය"
    android:layout_below="@id/nameLogoIconId"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/Line3Id"
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/topic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="#7A494646" />

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  දොළුව රෝයල් යෞවන සමාජයේ සාමාජිකයින්ගේ
 සාමජික මුදල් පිලිබද දැනුවත්වීම
 සදහා යෞවන සමාජයේ සාමාජිකයන් සදහාම
 නිර්මාණය කරන ලද DRC Digital App එක දොළුව
 රෝයල් යෞවන සමාජයේ සාමාජිකයන් සදහා
 පමණක් වන අතර සියලුම අයිතීන් යෞවන සමාජය සතුවේ"
                android:layout_below="@id/Line3Id"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <View
                android:id="@+id/Line4Id"
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/details"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#7A494646" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact us"
                android:layout_below="@id/Line4Id"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>


            <RelativeLayout
                android:id="@+id/contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact"
                android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/facebookimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook"


                />
            <TextView
                android:id="@+id/facebookTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FaceBook"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/facebookimage"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/whatsappimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/whatsapp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/facebookTxt"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/whatsappTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/whatsappimage"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>


            </RelativeLayout>

            <View
                android:id="@+id/Line5Id"
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/contacts"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#7A494646" />

            <TextView
                android:id="@+id/DeveloperDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Details"
                android:layout_marginTop="5dp"
                android:layout_below="@id/Line5Id"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:id="@+id/developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DeveloperDetails"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:textStyle="italic"
                    android:layout_height="wrap_content"
                    android:text="H.B.D.M.Hewabandara"
                    />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:textStyle="italic"
                    android:text="dilshanmadumesha175@gmail.com"
                    />
                <TextView
                    android:id="@+id/PhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:textStyle="italic"
                    android:text="0758155175"
                    />

            </RelativeLayout>
        </RelativeLayout>
        </RelativeLayout>
        </RelativeLayout>